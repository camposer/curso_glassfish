<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>todolistWeb</display-name>
  
  <login-config><!-- Definiendo autenticación vía FORM -->
    <auth-method>FORM</auth-method>
    <realm-name>file</realm-name><!-- REALM del Servidor de Aplicaciones -->
    <form-login-config>
      <form-login-page>/login.html</form-login-page>
      <form-error-page>/error.html</form-error-page>
    </form-login-config>
  </login-config>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin</web-resource-name>
      <url-pattern>/admin/*</url-pattern><!-- Mapeo de seguridad -->
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMIN</role-name><!-- ROL que tiene acceso -->
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee><!-- SSL -->
    </user-data-constraint>
  </security-constraint>
  
  <!-- Roles del sistema -->
  <security-role>
    <description>Rol de Administrador</description>
    <role-name>ADMIN</role-name>
  </security-role>
  <security-role>
    <description>Rol de Usuario</description>
    <role-name>USER</role-name>
  </security-role>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>